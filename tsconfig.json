{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "components/*": ["src/components/*"],      
      "@/*": ["src/*"]
    },    
    "target": "es5",
    "module": "commonjs",
    "downlevelIteration": true, 
    "noImplicitAny": false,       
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*",
    "scripts/**/*",
    "settings/jestSetup.js"
  ],
  "exclude": [
    "node_modules"
  ]  
}
